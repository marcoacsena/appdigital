<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".view.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:background="@drawable/linha_amarela"
        android:padding="14dp">

        <Button
        android:id="@+id/btnVoltarTelaListaDeMensagens"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_weight="0.6"
        android:background="@drawable/menu"
        android:onClick="menu" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/logo_correios"
            android:layout_weight="8"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:padding="16dp">


        <ImageView
            android:id="@+id/imgUsuario"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/user"

            />

        <EditText
            android:id="@+id/editCpf"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:hint="Digite o seu CPF ou CNPJ e clique em entrar"
            android:inputType="number"
            android:textSize="16sp"

            />

        <Button
            android:id="@+id/btnAcessarListaMensagens"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Entrar"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>