<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="50dp"
android:orientation="horizontal"
android:background="#ffffff">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="20dp"
            android:src="@drawable/notificacao"
            android:layout_marginTop="10dp"
            android:id="@+id/ivTipoDocumento"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvTipoDocumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notificação"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCidadeEmissorDocumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 17/09/2019"

            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvDataEntregaDocumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="São Paulo, "
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30 de janeiro de 2019"
            android:textSize="14sp"
            android:id="@+id/tvDataDocumento"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/seta_de_avanco"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/ivLogoTipoDocumento"
            />

    </LinearLayout>

</LinearLayout>