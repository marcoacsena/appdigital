<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="editTextCpf">
        <item name="android:background">@drawable/fundo_edit_text_login</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="EditTextCPFLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonVoltar">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:background">@drawable/botao_voltar_azul</item>
    </style>

</resources>
